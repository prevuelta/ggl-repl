{
    "name": "Rune",
    "version": "0.0.1",
    "description": "SVG glyph creator using paper.js. Grid based design system to produce letter forms, icons etc then export as SVG from browser.",
    "main": "app.min.js",
    "scripts": {
        "flow": "flow",
        "start": "run-s lib build run:client",
        "run:server": "echo 'Running server'; nodemon --watch './dist' --exec 'node -r esm ./server/server.js'",
        "run:client": "echo 'Serving on 7200'; browser-sync start --port 7200 --serveStatic './dist' --files './dist/*'",
        "prewatch": "rm dist/*; npm run copy-statics; npm run lib",
        "watch": "run-p copy-statics watch:js watch:css build:html watch run:server",
        "watch:js": "nodemon --watch ./src/scripts -x 'npm run build:js'",
        "watch:css": "sass --watch ./src/styles/main.scss:./dist/styles/main.css",
        "watch:html": "watch 'npm run build:html'",
        "build": "echo 'building app...'; run-s lib  build:js build:css copy-statics",
        "build:html": "cp ./src/index.html ./dist/index.html",
        "build:js": "rollup -c rollup.config.app.js",
        "build:css": "echo 'compiling stylesheets...'; sass ./src/styles/main.scss:./dist/styles/main.css",
        "lib": "rollup -c rollup.config.lib.js",
        "copy-statics": "echo 'Copying statics...'; cp -R ./src/assets/ ./dist/assets/",
        "test": "nodemon -r esm -e example,js ./test/test.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/prevuelta/rune.git"
    },
    "babel": {
        "presets": ["@babel/preset-env", "@babel/preset-react"],
        "plugins": ["@babel/plugin-proposal-class-properties"]
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/prevuelta/rune/issues"
    },
    "homepage": "https://github.com/prevuelta/rune",
    "devDependencies": {
        "@babel/core": "^7.4.5",
        "@babel/plugin-proposal-class-properties": "^7.2.3",
        "@babel/preset-env": "^7.4.5",
        "@babel/preset-flow": "^7.0.0",
        "@babel/preset-react": "^7.0.0",
        "browser-sync": "^2.26.7",
        "eslint": "^5.16.0",
        "npm-run-all": "^4.1.3",
        "rollup-plugin-babel": "^4.3.2",
        "rollup-plugin-commonjs": "^10.0.0",
        "rollup-plugin-eslint": "^6.0.0",
        "rollup-plugin-json": "^4.0.0",
        "rollup-plugin-node-builtins": "^2.1.2",
        "rollup-plugin-node-globals": "^1.4.0",
        "rollup-plugin-node-resolve": "^5.0.3",
        "rollup-plugin-string": "^3.0.0",
        "rollup-plugin-uglify": "^6.0.1"
    },
    "dependencies": {
        "dotenv": "^8.0.0",
        "esm": "^3.2.25",
        "express": "^4.17.1",
        "glob": "^7.1.4",
        "npm-check-updates": "^3.1.11",
        "react": "^16.2.0",
        "react-ace": "^7.0.2",
        "react-dom": "^16.2.0",
        "react-draggable": "^3.0.4",
        "rollup": "^1.15.6",
        "svgo": "^1.2.2"
    }
}
